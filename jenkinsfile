pipeline {
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{
        stage('build dockerimage'){
            steps{

                sh "docker build -t . tharun13055/nodejs_dev:${DOCKER_TAG}"
            }
        }
    }
}

def getDockerTag(){
    def tag = sh script 'git rev-parse HEAD',returnStdout: true
    return tag
}